<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.caldiningapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/menulauncher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Settings"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.caldiningapp.SETTINGS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Breakfast"
            android:label="@string/title_activity_breakfast" >
        </activity>
        <activity
            android:name=".Lunch"
            android:label="@string/title_activity_lunch" >
        </activity>
        <activity
            android:name=".Dinner"
            android:label="@string/title_activity_dinner" >
        </activity>
        
        <activity
            android:name=".About"
            android:theme="@style/Theme.AppCompat.Light"
            android:label="@string/title_activity_about" >
        </activity>
    </application>

</manifest>